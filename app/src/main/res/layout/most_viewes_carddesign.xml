<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/most_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/macdss" />

        <TextView
            android:id="@+id/most_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/most_image"
            android:fontFamily="@font/bold"
            android:text="McDonalds' flagship"
            android:textColor="@color/colorFont"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/most_ratingbar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/most_image"
            android:progressTint="@color/colorFont"
            android:rating="3" />

        <TextView
            android:id="@+id/most_description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/most_ratingbar"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/most_image"
            android:fontFamily="@font/medium"
            android:text="spacex spacex spacex spacex spacex spacex spacex spacex spacex"
            android:textColor="@color/colorFont" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
